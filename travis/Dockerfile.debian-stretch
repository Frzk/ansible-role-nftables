# Build Debian Stretch image.

FROM debian:stretch

RUN apt-get update && \
  apt-get install -y --no-install-recommends \
  build-essential \
  systemd \
  python-pip \
  git

RUN pip install ansible

RUN mkdir -p /etc/ansible && echo "[local]\nlocalhost ansible_connection=local" > /etc/ansible/hosts

ENTRYPOINT ["/bin/systemd"]
